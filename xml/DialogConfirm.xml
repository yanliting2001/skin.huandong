			</control>
			<control type="grouplist">
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>100%</width>
				<height>192</height>
				<align>center</align>
				<itemgap>-52</itemgap>
				<orientation>horizontal</orientation>
				<control type="button" id="11">
					<description>OK button</description>
					<width>392</width>
					<height>192</height>
					<label>107</label>
					<font>font40</font>
					<align>center</align>
