					<focusedcolor>white</focusedcolor>
					<texturefocus border="64">dialogs/button_fo.png</texturefocus>
					<texturenofocus border="64">dialogs/button_nf.png</texturenofocus>
				</control>
				<control type="button" id="10">
					<description>Cancel button</description>
					<width>392</width>
					<height>192</height>
					<label>106</label>
