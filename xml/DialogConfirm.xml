<?xml version="1.0" encoding="UTF-8"?>
<window>
	<animation effect="fade" time="200">WindowOpen</animation>
	<animation effect="fade" time="200">WindowClose</animation>
	<controls>
		<control type="group">
			<width>1920</width>
			<height>1080</height>
			<centertop>50%</centertop>
			<centerleft>50%</centerleft>
			<visible>![Window.IsActive(music) | Window.IsActive(videos) | Window.IsActive(pictures) | Window.IsActive(filemanager) | Window.IsActive(1125)]</visible>
